article.add-listing
    form(ng-submit="createListing()")
        .form-group
        input.form-control.input-lg.text-center(type="text" placeholder="Name" ng-model="formData.name")
        input.form-control.input-lg.text-center(type="text" placeholder="Email" ng-model="formData.email")
        input.form-control.input-lg.text-center(type="text" placeholder="Town, Country" ng-model="formData.location")
        input.form-control.input-lg.text-center(type="text" placeholder="Beds Available" ng-model="formData.bedsavailable")
        input.form-control.input-lg.text-center(type="text" placeholder="Beds Required" ng-model="formData.bedsrequired")
        button.medium.success.button(type="submit") Add



